<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_margin="2dp"
       android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <!-- user name reg no and pic -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="130dp"
            >
            <!-- addimg 2 leniar layout -->

            <!-- for username -->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER_NAME"
                    android:layout_margin="20dp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REG_NO"
                    android:layout_marginStart="20sp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    >
                </TextView>


            </LinearLayout>
            <!-- for pic -->
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp">
                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="110dp"
                    android:src="@drawable/swapnil_pic_formal"
                    android:contentDescription="ser_picture">
                </ImageView>

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Groups"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold">
        </TextView>

        <!-- making tabs -->
        <!-- for 6 tabs 1 linear layout -->
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!-- 1st set buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                >
                <Button
                    android:text="MCA"
                    android:id="@+id/mca_button"
                    android:layout_marginStart="20dp"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </Button>
                <Button
                    android:text="MBA"
                    android:id="@+id/mba_button"
                    android:layout_marginStart="20dp"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </Button>
                <Button
                    android:text="MTECH"
                    android:id="@+id/mtech_button"
                    android:layout_marginStart="20dp"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:textSize="30sp"
                    android:textStyle="bold">
                </Button>
            </LinearLayout>

            <!-- 2nd set of buttons -->
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <Button
                    android:text="BTECH"
                    android:id="@+id/btech_button"
                    android:layout_marginStart="20dp"
                    android:layout_width="155dp"
                    android:layout_height="160dp"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </Button>
                <Button
                    android:text="BBA"
                    android:id="@+id/bba_button"
                    android:layout_marginStart="20dp"
                    android:layout_width="155dp"
                    android:layout_height="160dp"
                    android:textSize="25sp"
                    android:textStyle="bold">

                </Button>
                <Button
                    android:text="BIOTECH"
                    android:id="@+id/biotech_button"
                    android:layout_marginStart="20dp"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:textSize="25sp"
                    android:textStyle="bold">
                </Button>
            </LinearLayout>

        </LinearLayout>
        <!-- help desk and directory  -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="105dp"
                android:text="HELP DESK"
                android:layout_marginStart="6dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="105dp"
                android:text="DIRECTORY"
                android:layout_marginStart="10dp"
                >

            </LinearLayout>
        </LinearLayout>

        <!-- NAV BAR BELOW -->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="55dp"
           >
           <ImageButton
               android:id="@+id/nav1"
               android:layout_width="70dp"
               android:layout_height="45dp"
               android:src="@drawable/ic_launcher_background"
               android:layout_margin="5dp"
               android:tooltipText="@string/nav1"
               >
           </ImageButton>
           <ImageButton
               android:id="@+id/nav2"
               android:layout_width="70dp"
               android:layout_height="45dp"
               android:src="@drawable/ic_launcher_background"
               android:layout_margin="5dp"
               >
           </ImageButton>
           <ImageButton
               android:id="@+id/nav3"
               android:layout_width="70dp"
               android:layout_height="45dp"
               android:src="@drawable/ic_launcher_background"
               android:layout_margin="5dp"
               >
           </ImageButton>
           <ImageButton
               android:id="@+id/nav4"
               android:layout_width="70dp"
               android:layout_height="45dp"
               android:src="@drawable/ic_launcher_background"
               android:layout_margin="5dp"
               >
           </ImageButton>
           <ImageButton
               android:id="@+id/nav5"
               android:layout_width="70dp"
               android:layout_height="45dp"
               android:src="@drawable/ic_launcher_background"
               android:layout_margin="5dp"
               >
           </ImageButton>
       </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>